            AlbumList = PhotoManager.GetAlbums();
            ViewBag.Counter = 0;
            foreach (var album in AlbumList)
            {
                ViewData["AlbumID"] = album.AlbumID;
                ViewData["Caption"] = album.Caption;
                ViewData["Count"] = album.Count;

                <td class="item">
                    <table border="0" cellpadding="0" cellspacing="0" class="album-frame">
                        <tr>
                           <td class="topx----">
                                <img alt="" src="/css/Images/album-l1.gif" />
                            </td>
                            <td class="top-x---">
                                <img alt="" src="/css/Images/album-mtl.gif" />
                            </td>
                            <td class="top--x--"></td>
                            <td class="top---x-">
                                <img alt="" src="/css/Images/album-mtr.gif" />
                            </td>
                            <td class="top----x">
                                <img alt="" src="/css/Images/album-r1.gif" />
                            </td>
                        </tr>
                        <tr>
                            <td class="mtpx----">
                                <img alt="" src="/css/Images/album-l2.gif" />
                            </td>
                            <td colspan="3" rowspan="3">
                                <a href="/Photos/Index/@ViewData["AlbumID"]/@ViewData["Caption"]">
                                    <img src="/Handler/Index/AlbumID=@ViewData["AlbumID"]/Size=M" class="photo_198"
                                         style="border: 4px solid white" alt="Sample Photo from Album Number @ViewData["AlbumID"]" />
                                </a>
                            </td>
                            <td class="mtp----x">
                                <img alt="" src="/css/Images/album-r2.gif" />
                            </td>
                        </tr>
                        <tr>
                           <td class="midx----"></td>
